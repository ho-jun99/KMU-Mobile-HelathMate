<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/edit_ID"
      android:layout_width="200dp"
      android:layout_height="32dp"
      android:background="#D6D6CD"
      android:hint="@string/edit_userID"
      android:layout_marginRight="30dp"
      android:paddingLeft="15dp"
      android:inputType="textPersonName" />

    <Button
      android:id="@+id/btn_checkID"
      android:layout_width="75dp"
      android:layout_height="32dp"
      android:padding="0dp"
      android:text="중복확인"
      android:textSize="10sp"
      android:backgroundTint="#2193b0"
      tools:ignore="TouchTargetSizeCheck" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/edit_userPW"
      android:layout_width="200dp"
      android:layout_height="32dp"
      android:background="#D6D6CD"
      android:hint="@string/edit_userPW"
      android:paddingLeft="15dp"
      android:maxLength="12"
      android:inputType="textPassword"
      android:layout_marginRight="5dp"
      tools:ignore="TouchTargetSizeCheck" />

    <TextView
      android:id="@+id/edit_ruleOfpw"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="@string/ruleOfPW"
      android:textSize="10sp" />
  </LinearLayout>

  <EditText
    android:id="@+id/edit_checkPW"
    android:layout_width="200dp"
    android:layout_height="32dp"
    android:background="#D6D6CD"
    android:hint="@string/edit_checkPW"
    android:maxLength="12"
    android:paddingLeft="15dp"
    android:layout_marginEnd="52dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:inputType="textPassword" />

  <EditText
    android:id="@+id/edit_name"
    android:layout_width="200dp"
    android:layout_height="32dp"
    android:background="#D6D6CD"
    android:hint="@string/edit_name"
    android:layout_marginEnd="52dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:paddingLeft="15dp"
    android:inputType="textPersonName" />

  <EditText
    android:id="@+id/edit_PhoneNumber"
    android:layout_width="200dp"
    android:layout_height="32dp"
    android:background="#D6D6CD"
    android:layout_marginEnd="52dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:paddingLeft="15dp"
    android:inputType="phone"
    android:maxLength="13"
    android:hint="@string/txt_phoneNumber" />

  <EditText
    android:id="@+id/edit_address"
    android:layout_width="400dp"
    android:layout_height="50dp"
    android:background="#D6D6CD"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"

    android:hint="@string/edit_Address" />

  <ScrollView
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_marginTop="1dp"
    android:layout_gravity="center"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

      <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/personalInfo"
        android:textSize="20sp" />

    </LinearLayout>
  </ScrollView>

  <RadioGroup

    android:id="@+id/radio_groupAccept"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <RadioButton
      android:id="@+id/radio_Accept"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/radio_accept" />

    <RadioButton
      android:id="@+id/radio_Decline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/radio_decline" />

  </RadioGroup>

  <Button
    android:id="@+id/btn_submitSign"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#2193b0"
    android:text="@string/btn_submitSign" />


</LinearLayout>